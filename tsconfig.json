{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "rootDir": "./",
    "esModuleInterop": true,
    "typeRoots": [
      "./framework/gherkin/",
      "./framework/driver/assertions/ ",
      "./node_modules/@types"
    ],
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./dist",
    "allowJs": true,
    "types":[
      "testcafe",
      "long"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".idea",
    ".vscode"
  ]
}