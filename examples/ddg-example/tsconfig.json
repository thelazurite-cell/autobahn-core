{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ESNext",
    "rootDir": "./",
    "esModuleInterop": true,
    "typeRoots": [
      "../../node_modules/@types",
      "../../dist"
    ],
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "types": [
      "long"
    ]
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "../../node_modules",
    ".idea",
    ".vscode"
  ]
}